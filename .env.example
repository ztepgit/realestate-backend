# --- Server Configuration ---
PORT=8080
NODE_ENV="development"

# --- Database (Supabase + Prisma) ---
# Connect to Supabase (Transaction Mode - Port 6543)
# Get this string from Supabase Dashboard -> Project Settings -> Database -> Connection String -> URI (Transaction)
DATABASE_URL="postgresql://user:password@host:6543/postgres?pgbouncer=true"

# Connect to Supabase (Session Mode - Port 5432)
# Get this string from Supabase Dashboard -> Project Settings -> Database -> Connection String -> URI (Session)
DIRECT_URL="postgresql://user:password@host:5432/postgres"

# --- Security & CORS ---
# The URL of your frontend application
FRONTEND_URL="http://localhost:3000"

# --- Session Security ---
# Secret key for signing session cookies (Use a strong random string)
SESSION_SECRET="your-super-secret-key-here"